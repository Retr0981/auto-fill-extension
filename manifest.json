{
  "manifest_version": 3,
  "name": "AutoFill Pro",
  "version": "5.0",
  "description": "Beautiful AI form filler with profile & CV tools",
  "permissions": ["storage", "tabs", "scripting", "contextMenus", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["config.js", "content.js"],
    "run_at": "document_end",
    "world": "MAIN"
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png"
  },
  "commands": {
    "smart-fill": {
      "suggested_key": "Ctrl+Shift+F",
      "description": "Fill current form"
    }
  },
  "icons": {
    "48": "icon48.png"
  }
}