{
  "manifest_version": 3,
  "name": "AutoFill Pro - Smart Form Filler",
  "version": "3.0",
  "description": "One-click form filling with CV auto-upload and comprehensive field coverage",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "commands": {
    "smart-fill": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Trigger Smart Fill All"
    },
    "verify-fields": {
      "suggested_key": {
        "default": "Ctrl+Shift+V"
      },
      "description": "Verify all fields are filled"
    }
  },
  
  "icons": {
    "48": "icons/icon48.png"
  }
}