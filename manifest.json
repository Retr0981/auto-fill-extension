{
  "manifest_version": 3,
  "name": "AutoFill Pro - AI Form Filler",
  "version": "5.0",
  "description": "Intelligently fill any form with CV data extraction and smart matching",
  "permissions": ["storage", "tabs", "scripting", "notifications", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["config.js", "content.js"],
    "run_at": "document_end",
    "world": "MAIN"
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "commands": {
    "smart-fill": {
      "suggested_key": "Ctrl+Shift+F",
      "description": "Smart fill current form"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}