{
  "manifest_version": 3,
  "name": "AutoFill Pro - CV OCR & Smart Filler",
  "version": "4.1",
  "description": "Extracts CV data via OCR or manual entry, auto-fills ALL form fields",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "commands": {
    "smart-fill": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Smart Fill All Fields"
    }
  },
  
  "icons": {
    "48": "icons/icon48.png"
  }
}