{
  "manifest_version": 3,
  "name": "AutoFill Pro",
  "version": "6.1",
  "description": "Intelligent form filler with automatic required field detection and smart dropdown selection",
  
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "contextMenus",
    "activeTab",
    "notifications"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["content.css"],
    "run_at": "document_idle",
    "match_about_blank": true
  }],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png"
  },
  
  "commands": {
    "smart-fill": {
      "suggested_key": "Ctrl+Shift+F",
      "description": "Intelligently fill all forms with required field handling"
    }
  },
  
  "icons": {
    "48": "icon48.png"
  }
}